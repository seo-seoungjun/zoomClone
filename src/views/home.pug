      form#welcome
        input(placeholder="Room name" type="text" required)
        button Enter Room
      form#room
        h3 
        ul
        input(placeholder="message" type="text")
        button Send
      h4#open-rooms Open Room:
        ul 
    script(src="/socket.io/socket.io.js") 
    script(src="/public/js/app.js") 